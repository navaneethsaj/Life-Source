<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:animateLayoutChanges="true"
    tools:context=".MainActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:elevation="8dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/toolbar"
        android:background="@drawable/gradient_appbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:src="@drawable/lion" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Life Source"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:text="Hospital Management"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_below="@id/toolbar"
        android:background="@drawable/gradient_white"
        android:id="@+id/profilelayout"
        android:elevation="4dp"
        android:orientation="vertical"
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:background="@drawable/profile"
            android:layout_height="30dp"
            android:textSize="18dp"
            android:elevation="4dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:gravity="center" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="2"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hospitalicon"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:background="@color/linecolor"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <LinearLayout
                    android:padding="1dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/hsptlnamedetail"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:padding="2dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Hospital"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/textcolor"
                        android:id="@+id/profname"/>
                </LinearLayout>

                <LinearLayout
                    android:padding="1dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/hospitaladressicon"
                        android:layout_width="24dp"
                        android:gravity="center_vertical"
                        android:layout_height="24dp"
                        android:layout_marginRight="10dp"
                        android:padding="2dp"/>
                    <TextView
                        android:text="Address"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textcolor"
                        android:id="@+id/profaddress"/>
                </LinearLayout>

                <LinearLayout
                    android:padding="1dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/emailicon"
                        android:layout_width="24dp"
                        android:gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:layout_height="24dp"
                        android:padding="2dp"/>
                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:textColor="@color/textcolor"
                        android:layout_height="wrap_content"
                        android:id="@+id/profemail"
                        android:text="email@gmail.com"
                        android:paddingBottom="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:padding="1dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/mobileicon"
                        android:layout_width="24dp"
                        android:gravity="center_vertical"
                        android:layout_height="24dp"
                        android:layout_marginRight="10dp"
                        android:padding="2dp"/>
                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:textColor="@color/textcolor"
                        android:layout_height="wrap_content"
                        android:id="@+id/profmobile"
                        android:text="86321556"
                        android:paddingBottom="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:padding="1dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/phonedetail"
                        android:layout_width="24dp"
                        android:gravity="center_vertical"
                        android:layout_height="24dp"
                        android:layout_marginRight="10dp"
                        android:padding="2dp"/>
                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:textColor="@color/textcolor"
                        android:layout_height="wrap_content"
                        android:id="@+id/proftel"
                        android:text="0462-2345715"
                        android:paddingBottom="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:padding="1dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/faxicon"
                        android:layout_marginRight="10dp"
                        android:layout_width="24dp"
                        android:gravity="center_vertical"
                        android:layout_height="24dp"
                        android:padding="2dp"/>
                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:textColor="@color/textcolor"
                        android:layout_height="wrap_content"
                        android:id="@+id/proffax"
                        android:text="111-222-333"
                        android:paddingBottom="5dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@drawable/more"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Hospital ID"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profhospitalid"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Latitude"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/proflatitude"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Longitude"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/proflongitude"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/profilelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_white"
        android:layout_marginVertical="5dp"
        android:elevation="4dp"
        android:id="@+id/finddonorlayout"
        android:orientation="vertical">
        <TextView
            android:id="@+id/titlesearch"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Normal Search"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:background="@drawable/searchdonor"
            android:textStyle="bold"
            android:elevation="4dp"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:dropDownWidth="match_parent"></Spinner>
            <View
                android:layout_width="1dp"
                android:layout_marginVertical="4dp"
                android:layout_height="match_parent"
                android:background="@color/linecolor"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:elevation="4dp"
                android:background="@drawable/gradient_button"
                android:text="SEARCH DONOR"
                android:textColor="@color/white"
                android:id="@+id/finddonorbutton"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/resultlayout"
        android:layout_below="@+id/finddonorlayout"
        android:layout_above="@+id/bottomnavigator"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/gradient_white"
        android:elevation="4dp"
        android:layout_height="wrap_content">
        <TextView
            android:elevation="4dp"
            android:paddingHorizontal="10dp"
            android:gravity="center"
            android:background="@drawable/result"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/searchresulttextview"
            android:textColor="@color/white"/>
        <ListView
            android:elevation="8dp"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listviewdonors">
        </ListView>
    </LinearLayout>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomnavigator"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:itemTextColor="@color/bottom_nav_color"
        app:itemIconTint="@color/bottom_nav_color"
        android:background="@drawable/nav_bg"
        app:menu="@menu/navigation_items_hspt">

    </android.support.design.widget.BottomNavigationView>
    <RelativeLayout
        android:layout_centerVertical="true"
        android:id="@+id/developerlayout"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:text="Developed By,"
            android:id="@+id/desc"
            android:background="@drawable/gradient_subtitle"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:gravity="center"/>
        <LinearLayout
            android:layout_below="@id/desc"
            android:id="@+id/memberlayout"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="@drawable/circle"
                android:padding="5dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/textcolor"
                android:gravity="center"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="Navaneeth K\nS5R\nRoll no : 38"/>

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:textColor="@color/textcolor"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/circle"
                    android:text="Sreejith Jicks\nS5R\nRoll no : 56"/>

                <TextView
                    android:padding="5dp"
                    android:textSize="16dp"
                    android:textColor="@color/textcolor"
                    android:gravity="center"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:background="@drawable/circle"
                    android:text="Sreekanth V\nS5R\nRoll no : 57"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_below="@+id/memberlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/textcolor"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:text="5th Semester Computer Science Design Project\nMA college of Engineering\nKothamangalam"/>

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/sirensearch"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:tint="@color/white"
        android:src="@drawable/siren"/>
</RelativeLayout>