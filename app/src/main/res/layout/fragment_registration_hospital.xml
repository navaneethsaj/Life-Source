<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationHospitalFragment">
    <ScrollView
        android:id="@+id/regscrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/nextbutton">
        <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:elevation="8dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/gradient_white">
                <TextView
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:background="@drawable/gradient_subtitle"
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Fill out the form"/>
                <LinearLayout
                    android:paddingHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="2dp"
                            android:layout_gravity="center"
                            android:src="@drawable/hsptlnamedetail"/>
                        <TextView
                            android:textColor="@color/textcolor"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Hospital Name"/>
                        <EditText
                            android:inputType="textPersonName"
                            android:textColor="@color/textcolor"
                            android:layout_width="match_parent"
                            android:hint="*Required"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"
                            android:id="@+id/hospital_name"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:src="@drawable/hospitaladressicon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="2dp"
                            android:layout_gravity="center"/>
                        <TextView
                            android:textColor="@color/textcolor"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Address" />
                        <EditText
                            android:inputType="textPostalAddress"
                            android:textColor="@color/textcolor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="*Required"
                            android:textSize="14sp"
                            android:id="@+id/hospital_address"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="2dp"
                            android:layout_gravity="center"
                            android:src="@drawable/phonedetail"/>
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Phone"
                            android:textColor="@color/textcolor"/>
                        <EditText
                            android:inputType="phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/phoneno"
                            android:hint="*Required"
                            android:textSize="14sp"
                            android:textColor="@color/textcolor"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="2dp"
                            android:src="@drawable/mobileicon"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Mobile"
                            android:textColor="@color/textcolor"/>
                        <EditText
                            android:inputType="phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/mobile"
                            android:hint="*Required"
                            android:textSize="14sp"
                            android:textColor="@color/textcolor"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="2dp"
                            android:src="@drawable/faxicon"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Fax"
                            android:textColor="@color/textcolor"/>
                        <EditText
                            android:inputType="phone"
                            android:hint="*Optional"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/fax"
                            android:textSize="14sp"
                            android:textColor="@color/textcolor"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:padding="2dp"
                            android:src="@drawable/emailicon"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textColor="@color/textcolor"/>
                        <EditText
                            android:inputType="textEmailAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/email"
                            android:hint="*Required"
                            android:textSize="14sp"
                            android:textColor="@color/textcolor"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:elevation="8dp"
                android:layout_width="match_parent"
                android:id="@+id/locationlayout"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_white"
                android:layout_margin="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:background="@drawable/gradient_subtitle"
                    android:padding="4dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Location"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <ImageView
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/gpsanten"/>
                    <Button
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:id="@+id/locate"
                        android:text="LOCATE"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/white"
                        android:background="@drawable/gradient_button"
                        android:layout_margin="4dp"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/linecolor"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:padding="2dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textColor="@color/textcolor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="20dp"
                            android:text="Address"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/addressview"
                            android:gravity="right"
                            android:textColor="@color/textcolor" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="20dp"
                            android:textColor="@color/textcolor"
                            android:text="City"/>
                        <TextView
                            android:id="@+id/cityview"
                            android:layout_width="match_parent"
                            android:gravity="right"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textcolor" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:padding="2dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="20dp"
                            android:textColor="@color/textcolor"
                            android:text="State"/>
                        <TextView
                            android:id="@+id/stateview"
                            android:gravity="right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textcolor" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:padding="2dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/textcolor"
                            android:layout_height="wrap_content"
                            android:paddingRight="20dp"
                            android:text="Country"/>
                        <TextView
                            android:id="@+id/countryview"
                            android:gravity="right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textcolor" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:padding="2dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/textcolor"
                            android:layout_height="wrap_content"
                            android:paddingRight="20dp"
                            android:text="Postal Code"/>
                        <TextView
                            android:id="@+id/postalcodeview"
                            android:gravity="right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textcolor" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/textcolor"
                            android:paddingRight="20dp"
                            android:layout_height="wrap_content"
                            android:text="Known Name"/>
                        <TextView
                            android:id="@+id/knownameview"
                            android:layout_width="match_parent"
                            android:gravity="right"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textcolor" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:padding="2dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:paddingRight="20dp"
                            android:textColor="@color/textcolor"
                            android:layout_height="wrap_content"
                            android:text="Latitude"/>

                        <TextView
                            android:id="@+id/latitudeview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:textColor="@color/textcolor" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:padding="2dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="20dp"
                            android:textColor="@color/textcolor"
                            android:text="Longitude"/>
                        <TextView
                            android:id="@+id/longitudeview"
                            android:gravity="right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textcolor" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/nextbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="4dp"
        android:textColor="@color/white"
        android:background="@drawable/gradient_button"
        android:text="Next" />


</RelativeLayout>